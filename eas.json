{
  "cli": {
    "version": ">= 5.6.0"
  },
  "build": {
    "development": {
      "extends": "production",
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "android": {
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": true
      }
    },
    "development:device": {
      "extends": "development",
      "channel": "development-device",
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": false
      }
    },
    "preview": {
      "extends": "production",
      "distribution": "internal",
      "channel": "preview",
      "ios": { "simulator": true },
      "android": { "buildType": "apk" },
      "env": {}
    },
    "preview:device": {
      "extends": "preview",
      "channel": "preview-device",
      "ios": { "simulator": false }
    },
    "production": {
      "channel": "production",
      "env": {}
    }
  },
  "submit": {
    "production": {}
  }
}
